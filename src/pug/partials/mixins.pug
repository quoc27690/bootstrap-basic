mixin carousel-indicators(num)
  li(data-target='#carouselExampleIndicators' data-slide-to=num)(class!=attributes.class)

mixin carousel-inner(link)
  .carousel-item(class!=attributes.class)
    img.d-block.w-100(src=link)
    .carousel-caption.d-none.d-md-block
      h1.display-3(style='text-shadow: 2px 2px 10px #000;')
        | Example
      h3(style='text-shadow: 2px 2px 10px #000;')
        | Autolayout with Boostrap
      button.btn.btn-outline-secondary(type='button')
        | VIEW TUTORIALS
      button.btn.btn-outline-secondary(type='button')
        | GET STARTED

mixin carousel-control(data1, data2)
  a(href='#carouselExampleIndicators' role='button' data-slide=data1)(class!=attributes.class)
    span.carousel-control-prev-icon(aria-hidden='true')
    span.sr-only= data2

mixin main-application(data1, data2)
  if block
    block
  else
    p No content provided
  h3= data1
  p= data2

mixin main__lorem__text
  .col-md-6.d-flex.flex-column.justify-content-center
    h2 What is Lorem Ipsum?
    p Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.

mixin main__lorem__pic(link)
  .col-md-6
    img(src=link style='height: 100%; width: 100%;')

mixin main__team(link, name)
  .card.col-md-4(style='width: 18rem;')
    img.card-img-top(src=link)
    .card-body
      h5.card-title= name
      p.card-text
        | is a fullstack developer with 30 years of experiences
      a.btn.btn-primary(href='#') See profile
    
mixin social
  a(href='#')
    i(class!=attributes.class)